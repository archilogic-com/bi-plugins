    "jsx": "react",
    "types": ["react", "react-dom"],
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./.tmp/build/",
    "moduleResolution": "bundler",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bi-plugin-utils": ["../../utils"]
    }
  },
  "files": ["./src/visual.ts"]
}
